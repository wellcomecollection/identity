{
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": ["lcov", "json"],
    "collectCoverageFrom": [
        "src/**/*.{js,jsx,ts,tsx}",
        "!<rootDir>/node_modules/"
    ],
    "transform": {
        "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "/tests/.*\\.test\\.ts$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "moduleNameMapper": {
        "@weco/(.+)$": "<rootDir>packages/shared/$1/src"
    }
}
